{
  "compilerOptions": {
    "outDir": "../dist/server",
    "rootDir": "src",
    "module": "NodeNext",
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"]
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
